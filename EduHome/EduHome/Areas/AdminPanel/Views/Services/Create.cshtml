	@model Service

<div class="row">

	<div class="col-md-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Create Service</h4>

				<form class="forms-sample" method="post">
					<div class="form-group">
						<label>Name</label>
						<input asp-for="Title" class="form-control" placeholder="Name">
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label>Description</label>
						<textarea asp-for="SubTitle" class="form-control" placeholder="Description"></textarea>
						<span asp-validation-for="SubTitle" class="text-danger"></span>
					</div>
					<button type="submit" class="btn btn-primary mr-2">Submit</button>
					<a asp-action="Index" class="btn btn-secondary text-white">Cancel</a>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts{
	<partial name="_ValidationScriptsPartial"/>
}

